$(CXXTARGETS):	%:	%.o
	-$(CXXCOMPILER) $< $(CXXFLAGS) -o $@ $(CXXLDFLAGS)

.cc.o:
	-$(CXXCOMPILER) $< $(CXXFLAGS) $(IncludeDirs) -c -o $@
.cpp.o:
	-$(CXXCOMPILER) $< $(CXXFLAGS) $(IncludeDirs) -c -o $@

$(CTARGETS):	%:	%.o
	-$(CCOMPILER) $< $(CFLAGS) -o $@ $(CLDFLAGS)

.c.o:
	-$(CXXCOMPILER) $< $(CXXFLAGS) $(IncludeDirs) -c -o $@


