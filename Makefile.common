CXXFLAGS	= -fPIC -O3 -D_FILE_OFFSET_BITS=64 -std=c++0x
CXXCOMPILER	= g++
#CXXLDFLAGS	= 

#CTARGETS	= 
CFLAGS		= -fPIC -O3 -D_FILE_OFFSET_BITS=64
CCOMPILER	= gcc
#CLDFLAGS	=

#SharedLibTargets	=
SharedLibFlags	= -shared -fPIC

